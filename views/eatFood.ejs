<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Management App</title>

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
        }

        h1 {
            color: #333;
            text-align: center;
            padding: 20px;
            background-color: #e0e0e0;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        li {
            border: 1px solid #ccc;
            border-radius: 5px;
            margin: 10px 0;
            padding: 10px;
            background-color: #fff;
        }

        a {
            display: block;
            text-align: center;
            margin-top: 20px;
            text-decoration: none;
            color: #333;
        }

        .remove-icon {
        cursor: pointer;
        font-size: 20px;
        margin-left: 10px;
    }

    .remove-icon:hover {
        color: #e74c3c;
    }
    </style>
</head>
<body>

    <h1>What would you like to eat?</h1>

    <% if (foods && foods.length > 0) { %>
        <ul>
            <% foods.forEach((food) => { %>
                <li>
                    <div>
                        <strong>Title:</strong> <%= food.title %>, 
                        <strong>Calories:</strong> <%= food.calories %>, 
                        <strong>Mass:</strong> <%= food.mass %>
                        <button onclick="eatFood('<%= food._id %>')">Eat</button>
                    </div>
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>No foods added yet.</p>
    <% } %>

    <a href="/">Go to home page</a>
<script>
    async function eatFood(foodId) {
    try {
        const response = await fetch(`/api/eat-food/${foodId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
        });

        if (response.ok) {
            console.log('Food eaten successfully.');
            window.location.href = '/';
        } else {
            console.error('Error eating food.');
        }
    } catch (error) {
        console.error('Error:', error);
    }
}

</script>
</body>
</html>
